<!DOCTYPE html>
html(lang="en")

head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel="stylesheet" href="/css/main.css")
    link(rel="stylesheet" href="/css/forms.css")
    title #{docTitle}
    block style

body
    header.main-header
      nav.main-header__nav
        ul.main-header__item-list
          if isAuthenticated
            li.main-header__item
              a(href="/admin/site" class=(props_active === 'list' ? 'active' : '')) Site
            li.main-header__item
              a(href="/admin/site/add" class=(props_active === 'site-new' ? 'active' : '')) Add Site
            li.main-header__item
              a(href="/admin/thumb/all" class=(props_active === 'thumbs-all' ? 'active' : '')) Thumbs
            li.main-header__item
              a(href="/admin/user" class=(props_active === 'users' ? 'active' : '')) Users
        ul.main-header__item-list
          if !isAuthenticated
            li.main-header__item
              a(href="/admin/user/login" class=(props_active === 'login' ? 'active' : '')) Login
            li.main-header__item
              a(href="/admin/user/signup" class=(props_active === 'signup' ? 'active' : '')) Signup
          else
            li.main-header__item
              form(action="/admin/user/logout" method="POST")
                button(type="submit") Logout
    block content
